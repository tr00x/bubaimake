// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Car {
  id            String   @id @default(uuid())
  title         String
  title_ru      String?
  title_en      String?
  priceUsd      Int
  year          Int
  mileage       Int?
  transmission  String
  transmission_ru String?
  transmission_en String?
  horsepower    Int?
  topSpeed      Int?
  fuelType      String
  fuelType_ru   String?
  fuelType_en   String?
  condition     String
  condition_ru  String?
  condition_en  String?
  
  // New fields for better specs
  acceleration  Float?   // 0-100 km/h in seconds
  engineCapacity String? // e.g. "4.4L", "Electric"
  bodyType      String?  // e.g. "SUV", "Sedan"
  bodyType_ru   String?
  bodyType_en   String?
  driveType     String?  // e.g. "AWD", "RWD"
  driveType_ru  String?
  driveType_en  String?
  color         String?
  color_ru      String?
  color_en      String?

  descriptionMd String
  description_ru String?
  description_en String?
  status        String   // "active" | "hidden" | "reserved"
  tags          String   // JSON string or comma-separated
  tags_ru       String?
  tags_en       String?
  labels        String   // JSON string or comma-separated
  youtubeUrl    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  images        Image[]
}

model Image {
  id        String  @id @default(uuid())
  carId     String
  car       Car     @relation(fields: [carId], references: [id], onDelete: Cascade)
  pathOrUrl String
  isMain    Boolean @default(false)
  sortOrder Int     @default(0)
}
